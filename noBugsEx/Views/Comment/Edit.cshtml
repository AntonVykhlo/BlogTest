@model noBugsEx.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<form action="@Href("~/Comment/Update")" method="post" id="postForm">
    @if (Model.Id != -1)
    {
        <input type="hidden" name="id" value=" @Model.Id " />
    }
    <h3>Leave your comment</h3>
    <input type="text" name="title" class="form-control" placeholder="Title" value="@Model.Title" /> 
    <textarea name="body" class="form-control" rows="10" placeholder="Coment">@Model.Body</textarea><br />
    <input type="submit" name="submit" class="btn btn-default btn-xs" role="button" value="Submit" />
</form>