
@{
    ViewBag.Title = "Index";
}

<h2>Edit account role</h2>
@if (User.IsInRole("Admin"))
{


<form action="@Href("~/Users/EditAccountRole")" method="post" id="postForm">
    <input type="text" name="email" class="form-control" placeholder="Email">
    @*<input type="text" name="role" value="" /> Role<br />*@
    @Html.DropDownList("role",
                        new SelectList(ViewBag.RoleNames),
                        new { @class = "form-control" })
    <input type="submit" name="submit" class="btn btn-default btn-xs" role="button" value="Submit" />

</form>
}
<h2>Users</h2>
<ul>
    @foreach (var user in ViewBag.Users)
    {
        <li>@user.UserName</li>
    }
</ul>
