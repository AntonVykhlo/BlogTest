@model noBugsEx.Models.Post

@{
    ViewBag.Title = "Edit";
}

<form action="@Href("~/Blog/Update")" method="post" id="postForm">
    @if (Model.Id != -1)
    {
        <input type="hidden" name="id" value=" @Model.Id " />
    }
    <h3>Type your post.</h3>
        <input type="text" class="form-control" placeholder="Title" name="title" value="@Model.Title" />

    
    <textarea name="body" class="form-control" rows="10" placeholder="Post" >@Model.Body</textarea><br />
    <input type="submit" name="submit" class="btn btn-default btn-xs" role="button" value="Submit" />
</form>