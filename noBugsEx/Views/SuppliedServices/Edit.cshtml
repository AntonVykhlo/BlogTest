@model noBugsEx.Models.SuppliedService

@{
    ViewBag.Title = "Edit";
}

<form action="@Href("~/SuppliedServices/Update")" method="post" id="postForm">
    @if (Model.Id != -1)
    {
        <input type="hidden" name="id" value=" @Model.Id " />
    }
    <h3>Create service</h3>
    <input type="text"class="form-control" placeholder="Title" name="title" value="@Model.Title"  /> 
    <textarea name="shortDescription" class="form-control" rows="5" placeholder="Short Description" >@Model.ShortDescription</textarea><br />
    <textarea name="FullDescription" class="form-control" rows="10" placeholder="Full Description" >@Model.FullDescription</textarea><br />
    <input type="submit" name="submit" class="btn btn-default btn-xs" role="button" value="Submit" />
</form>