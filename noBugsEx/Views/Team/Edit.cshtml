@model noBugsEx.Models.Team

@{
    ViewBag.Title = "Edit";
}
<h4>Create new member</h4>
<form action="@Href("~/Team/Update")" method="post" id="postForm">
    @if (Model.Id != -1)
    {
        <input type="hidden" name="id" value=" @Model.Id " />
    }
    <input type="text" name="firstName"class="form-control" placeholder="First Name" value="@Model.FirstName" /> 
    <input type="text" name="lastName" class="form-control" placeholder="Last Name"value="@Model.LastName" /> 
    <input type="text" name="email" class="form-control" placeholder="Email"value="@Model.Email" />
    <input type="text" name="position"class="form-control" placeholder="Position" value="@Model.Position" /> 
    <input type="text" name="image"class="form-control" placeholder="Image" value="@Model.Image" /> 
    <input type="submit" name="submit" class="btn btn-default btn-xs" role="button" value="Submit" />
</form>